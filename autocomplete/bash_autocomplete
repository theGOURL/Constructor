#! /bin/bash

: ${PROG:=$(basename ${BASH_SOURCE})}

_constructor_bash_autocomplete() {
  if [[ "${COMP_WORDS[0]}" != "source" ]]; then
    local cur opts base
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    if [[ "$cur" == "-"* ]]; then
      opts=$( ${COMP_WORDS[@]:0:$COMP_CWORD} ${cur} --generate-shell-completion )
    else
      opts=$( ${COMP_WORDS[@]:0:$COMP_CWORD} --generate-shell-completion )
    fi
    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
  fi
}

complete -o bashdefault -o default -o nospace -F _constructor_bash_autocomplete $PROG
unset PROG
